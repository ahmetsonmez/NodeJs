<% result.forEach(course => { %>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="/source/images/<%= course.Image %>" class="img-fluid" alt="" srcset="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= course.Title %>
                        </h5>
                        <p class="card-text"> <%= course.Description %>  </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }) %>